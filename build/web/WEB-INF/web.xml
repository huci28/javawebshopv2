<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>termekServlet</servlet-name>
        <servlet-class>Servlets.termekServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>kosarServlet</servlet-name>
        <servlet-class>Servlets.kosarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>kilepes</servlet-name>
        <servlet-class>Servlets.kilepes</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>termekServlet</servlet-name>
        <url-pattern>/termekServlet</url-pattern>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>kosarServlet</servlet-name>
        <url-pattern>/kosarServlet</url-pattern>
        <url-pattern>/kosar.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>kilepes</servlet-name>
        <url-pattern>/kilepes</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>Constraint1</display-name>
        <web-resource-collection>
            <web-resource-name>vasarlok web oldalak</web-resource-name>
            <description/>
            <url-pattern>/index.html</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>vasarlo</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>belepes</realm-name>
        <form-login-config>
            <form-login-page>/belepes.html</form-login-page>
            <form-error-page>/belepesError.html</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>vasarlo szabalyok</description>
        <role-name>vasarlo</role-name>
    </security-role>
</web-app>
